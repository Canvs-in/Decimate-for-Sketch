{
  "name": "decimate",
  "description": "Round Fractional font sizes",
  "version": "1.0.1",
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "decimate",
    "manifest": "src/manifest.json",
    "main": "decimate.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:import/warnings",
      "plugin:import/errors",
      "plugin:jsdoc/recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es6": true
    },
    "parser": "babel-eslint",
    "rules": {
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "prefer-arrow-callback": "error",
      "no-unexpected-multiline": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": false
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "scripts/**/*.js",
          "webpack.*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "eslintIgnore": [
    "*.sketchplugin"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-sketch": "^0.2.4",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^18.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0"
  },
  "author": "Depro20 <roy@canvs.in>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Canvs-in/Decimate-for-Sketch.git"
  }
}
